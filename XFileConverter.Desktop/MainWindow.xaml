        <TextBlock x:Name="SaveSettingsText" HorizontalAlignment="Left" Margin="10,730,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139"/>
        <TextBlock HorizontalAlignment="Left" Margin="201,213,0,0" TextWrapping="Wrap" Text="MS-NAME" VerticalAlignment="Top" Height="17" Width="149" Background="#FFE8DFDF" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="201,286,0,0" TextWrapping="Wrap" Text="MS-ISSUE" VerticalAlignment="Top" Height="17" Width="149" Background="#FFE8DFDF" Grid.Column="1"/>
