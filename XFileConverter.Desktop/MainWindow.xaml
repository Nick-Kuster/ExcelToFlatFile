        <TextBlock HorizontalAlignment="Left" Margin="331,70,0,0" TextWrapping="Wrap" Text="XFile Conversion Utility" VerticalAlignment="Top" Width="455" Height="44" FontSize="36" FontWeight="Bold" TextDecorations="Underline" Grid.ColumnSpan="2" TextAlignment="Center" Foreground="#FFFBFBFB"/>
        <TextBlock HorizontalAlignment="Left" Margin="465,119,0,0" TextWrapping="Wrap" Text="Version 1.0.0" VerticalAlignment="Top" Width="162" TextAlignment="Center" Foreground="#FFFBFBFB"/>
        <Button Content="Save Template Variables" Click="btnSaveVariables_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="139" Margin="201,562,0,0" Grid.Column="1"/>
