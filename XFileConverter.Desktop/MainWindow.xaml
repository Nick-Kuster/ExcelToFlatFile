        <TextBox x:Name="MsIssue" MaxLength="8" HorizontalAlignment="Left" Height="23" Margin="201,308,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Grid.Column="1"/>
        <TextBox x:Name="MsRevision" MaxLength="8" HorizontalAlignment="Left" Height="23" Margin="201,370,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="214" Grid.Column="1"/>
