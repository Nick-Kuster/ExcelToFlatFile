        <TextBox x:Name="XfileOutputDir" HorizontalAlignment="Left" Height="23" Margin="10,512,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="721" Grid.ColumnSpan="2"/>
        <TextBox x:Name="ErrorFileDir" HorizontalAlignment="Left" Height="23" Margin="10,580,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="721" Grid.ColumnSpan="2"/>
